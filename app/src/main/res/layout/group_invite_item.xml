<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You have been invited to join the group:"
        android:id="@+id/groupInviteMessage"
        android:textColor="#0f23ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Group who sent invite"
        android:id="@+id/invitingGroup"
        android:layout_below="@+id/groupInviteMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Invite Message"
        android:id="@+id/inviteMessage"
        android:layout_below="@+id/invitingGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#262b47" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do you wish to join?"
        android:id="@+id/promptJoin"
        android:layout_below="@+id/inviteMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:id="@+id/yesButton"
        android:layout_alignTop="@+id/noButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/noButton"
        android:layout_below="@+id/promptJoin"
        android:layout_toRightOf="@+id/yesButton"
        android:layout_toEndOf="@+id/yesButton" />
</RelativeLayout>