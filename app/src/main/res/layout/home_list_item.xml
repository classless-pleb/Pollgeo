<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poll Title"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Option 1"
        android:id="@+id/option1button"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/option2button"
        android:layout_alignStart="@+id/option2button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/option1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/option1button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/option2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/option1button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Option 2"
        android:id="@+id/option2button"
        android:layout_alignBottom="@+id/option2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/option3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/option2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Option 3"
        android:id="@+id/option3button"
        android:layout_alignBottom="@+id/option3"
        android:layout_alignLeft="@+id/option2button"
        android:layout_alignStart="@+id/option2button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/option4"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/option3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Option 4"
        android:id="@+id/option4button"
        android:layout_below="@+id/option3button"
        android:layout_alignLeft="@+id/option3button"
        android:layout_alignStart="@+id/option3button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Votes 1"
        android:id="@+id/votes1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/option1button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Votes 2"
        android:id="@+id/votes2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/option2"
        android:layout_alignBottom="@+id/option2"
        android:layout_alignLeft="@+id/votes1"
        android:layout_alignStart="@+id/votes1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Votes 3"
        android:id="@+id/votes3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/option3"
        android:layout_alignLeft="@+id/votes2"
        android:layout_alignStart="@+id/votes2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Votes 4"
        android:id="@+id/votes4"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/option4"
        android:layout_alignLeft="@+id/votes3"
        android:layout_alignStart="@+id/votes3"/>

</RelativeLayout>
